@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Books", null, new { @class="btn btn-block btn-default btn-lg"} )

@foreach(var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Books",
        action = "List",
        genre = link
    }, new {
        @class="btn btn-block btn-default btn-lg"
        +(link == ViewBag.SelectedGenre ? "btn btn-primary btn-lg" : "")
    })
}